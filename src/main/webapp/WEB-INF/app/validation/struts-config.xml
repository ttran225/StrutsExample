<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="ValidatorForm" type="com.tutran.common.form.validation.TestValidatorForm" />

		<form-bean name="DynaActionForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="fullName" type="java.lang.String"></form-property>
			<form-property name="email" type="java.lang.String"></form-property>
			<form-property name="password" type="java.lang.String"></form-property>
			<form-property name="birthDate" type="java.lang.String"></form-property>
			<form-property name="country" type="java.lang.String[]"></form-property>
			<form-property name="gender" type="java.lang.Boolean"></form-property>
			<form-property name="mealPreference" type="java.lang.Boolean"></form-property>
			<form-property name="accept" type="java.lang.Boolean"></form-property>
		</form-bean>
		
		<form-bean name="DynaValidatorForm" type="org.apache.struts.validator.DynaValidatorForm">
		</form-bean>

		<form-bean name="LazyForm" type="com.tutran.common.form.LazyForm" />
	</form-beans>

	<action-mappings>
		<action path="/ViewValidatorForm"
				type="com.tutran.common.action.validation.ViewValidatorFormAction"
				name="ValidatorForm"
				validate="false">
			<forward name="success" path="/pages/validation/ValidatorForm.jsp" />
		</action>

		<action path="/SubmitValidatorForm"
				type="com.tutran.common.action.validation.SubmitValidatorFormAction"
				name="ValidatorForm" 
				input="/ViewValidatorForm.do">
			<forward name="success" path="/pages/validation/Success.jsp" />
		</action>

		<action path="/ViewDynaActionForm" 
						type="com.tutran.common.action.validation.ViewDynaActionFormAction"
						name="DynaActionForm"
						validate="false">
			<forward name="success" path="/pages/validation/DynaActionForm.jsp" />
		</action>

		<action path="/SubmitDynaActionForm"
				type="com.tutran.common.action.validation.SubmitDynaActionFormAction"
				name="DynaActionForm" 
				input="/ViewDynaActionForm.do">
			<forward name="success" path="/pages/validation/Success.jsp" />
			<forward name="fail" path="/pages/validation/DynaActionForm.jsp" />
		</action>

		<action path="/ViewLazyForm" type="org.apache.struts.actions.ForwardAction"
				parameter="/pages/validation/LazyForm.jsp" />

		<action path="/SubmitLazyForm"
				type="com.tutran.common.action.validation.SubmitLazyFormAction" name="LazyForm"
				input="/ViewLazyForm.do">
			<forward name="success" path="/pages/validation/Success.jsp" />
			<forward name="fail" path="/pages/validation/LazyForm.jsp" />
		</action>
	</action-mappings>

	<message-resources parameter="com.tutran.common.properties.struts" />

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/app/validation/validator-rules.xml, /WEB-INF/app/validation/validation.xml" />
	</plug-in>

</struts-config>