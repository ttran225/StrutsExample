<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<action-mappings>
		<action path="/ViewDepartments" 
				type="com.tutran.common.action.ViewDepartmentsAction">
			<forward name="success" path="/pages/database/Departments.jsp"/>
	   </action>
	   
	   <action path="/ViewEmployees" 
				type="com.tutran.common.action.ViewEmployeesAction">
			<forward name="success" path="/pages/database/Employees.jsp"/>
	   </action>
	</action-mappings>
	
	<message-resources parameter="com.tutran.common.properties.database" />
	
</struts-config>