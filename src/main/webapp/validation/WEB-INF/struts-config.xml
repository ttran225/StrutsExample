<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="SignUpForm"
			type="com.tutran.common.form.SignUpForm"/>
	</form-beans>

	<action-mappings>
		<action path="/ViewSignUp"
						type="org.apache.struts.actions.ForwardAction"
						parameter="/validation/pages/SignUp.jsp"/>
			
		<action path="/SubmitSignUp"
						type="com.tutran.common.action.SubmitSignUpAction"
						name="SignUpForm"
						input="/ViewSignUp.do">
			<forward name="success" path="/helloworld/pages/HelloWorld.jsp"/>
		</action>
	</action-mappings>
	
	<message-resources
		parameter="com.tutran.user.properties.user" />
	
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn" >
		<set-property property="pathnames"
		value="/validation/WEB-INF/validator-rules.xml, /validation/WEB-INF/validation.xml"/>
	</plug-in>
	
</struts-config>