<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="ValidatorForm"
			type="com.tutran.common.form.validation.TestValidatorForm"/>
			
		<form-bean name="DynaActionForm"
			type="org.apache.struts.action.DynaActionForm">
			<form-property name="name" type="java.lang.String"></form-property>
			<form-property name="email" type="java.lang.String"></form-property>
			<form-property name="username" type="java.lang.String"></form-property>
			<form-property name="password" type="java.lang.String"></form-property>
			<form-property name="password2" type="java.lang.String"></form-property>
		</form-bean>
	</form-beans>

	<action-mappings>
		<action path="/ViewValidatorForm"
						type="org.apache.struts.actions.ForwardAction"
						parameter="/validation/pages/ValidatorForm.jsp"/>
			
		<action path="/SubmitValidatorForm"
						type="com.tutran.common.action.validation.SubmitValidatorFormAction"
						name="ValidatorForm"
						input="/ViewValidatorForm.do">
			<forward name="success" path="/validation/pages/Success.jsp"/>
		</action>
		
		<action path="/ViewDynaActionForm"
						type="org.apache.struts.actions.ForwardAction"
						parameter="/validation/pages/DynaActionForm.jsp"/>
			
		<action path="/SubmitDynaActionForm"
						type="com.tutran.common.action.validation.SubmitDynaActionFormAction"
						name="DynaActionForm"
						input="/ViewDynaActionForm.do">
			<forward name="success" path="/validation/pages/Success.jsp"/>
			<forward name="fail" path="/validation/pages/DynaActionForm.jsp"/>
		</action>
	</action-mappings>
	
	<message-resources
		parameter="com.tutran.user.properties.user" />
	
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn" >
		<set-property property="pathnames"
		value="/validation/WEB-INF/validator-rules.xml, /validation/WEB-INF/validation.xml"/>
	</plug-in>
	
</struts-config>